import java.time.ZonedDateTime;
import tw.idv.louislee.accountingbook.domain.entity.AccountingEventType;

-- 記帳事件
CREATE TABLE AccountingEvent (
    -- 編號
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    -- 帳戶編號
    accountId INTEGER NOT NULL,
    -- 帳戶餘額，扣除或加上金額後的餘額
    balance INTEGER NOT NULL,
    -- 金額
    price INTEGER NOT NULL,
    -- 是否為收入(0: 支出/ 1: 收入)
    isIncome INTEGER AS Boolean NOT NULL DEFAULT 0,
    -- 類型
    type INTEGER AS AccountingEventType NOT NULL,
    -- 備註
    note TEXT,
    -- 建立日期
    createDate INTEGER AS ZonedDateTime NOT NULL,
    -- 最後更新日期
    lastUpdateDate INTEGER AS ZonedDateTime NOT NULL,
    FOREIGN KEY(accountId) REFERENCES Account(id)
);

findAll:
SELECT *
FROM AccountingEvent
ORDER BY id DESC;

findById:
SELECT *
FROM AccountingEvent
WHERE id = ?;

add:
INSERT INTO AccountingEvent(accountId, price, isIncome, balance, type, note, createDate, lastUpdateDate)
VALUES (
    :accountId,
    :price,
    :isIncome,
    :balance,
    :type,
    :note,
    :createDate,
    :lastUpdateDate
);

deleteById:
DELETE FROM AccountingEvent
WHERE id = ?;

plusBalanceByIdGreaterThan:
UPDATE AccountingEvent
SET balance = balance + :price,
    lastUpdateDate = :lastUpdateDate
WHERE id > :id;

updateById:
UPDATE AccountingEvent
SET accountId = ?,
    price = ?,
    isIncome = ?,
    balance = ?,
    type = ?,
    note = ?,
    lastUpdateDate = ?
WHERE id = ?;
